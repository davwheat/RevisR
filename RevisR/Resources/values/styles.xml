<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
  <style name="itemSeparator">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:layout_margin">0dp</item>
    <item name="android:background">?android:attr/listDivider</item>
  </style>
  <style name="Divider">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:layout_margin">0dp</item>
    <item name="android:background">?android:attr/listDivider</item>
  </style>
  <style name="LargeDivider">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_marginTop">7.5dp</item>
    <item name="android:layout_marginBottom">0dp</item>
    <item name="android:layout_height">4dp</item>
    <item name="android:background">#000</item>
  </style>
  <style name="title">
    <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAlignment">center</item>
    <item name="android:layout_marginTop">10dp</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="android:layout_marginLeft">20dp</item>
    <item name="android:layout_marginRight">20dp</item>
    <item name="android:drawableTintMode">src_in</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">35dp</item>
  </style>
  <style name="subtitle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAlignment">center</item>
    <item name="android:layout_marginTop">10dp</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="android:layout_marginLeft">15dp</item>
    <item name="android:layout_marginRight">15dp</item>
    <item name="android:textStyle">bold|italic</item>
    <item name="android:textSize">25dp</item>
  </style>
  <style name="heading">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAlignment">center</item>
    <item name="android:layout_marginTop">10dp</item>
    <item name="android:layout_marginLeft">15dp</item>
    <item name="android:layout_marginRight">15dp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">17.5dp</item>
    <item name="android:textColor">#000</item>
  </style>
  <style name="text">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAlignment">center</item>
    <item name="android:layout_marginTop">5dp</item>
    <item name="android:layout_marginBottom">5dp</item>
    <item name="android:layout_marginLeft">10dp</item>
    <item name="android:layout_marginRight">10dp</item>
    <item name="android:textSize">13dp</item>
    <item name="android:textColor">#222</item>
  </style>
  <style name="maths_def">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAlignment">center</item>
    <item name="android:layout_margin">0dp</item>
    <item name="android:paddingTop">15dp</item>
    <item name="android:paddingBottom">15dp</item>
    <item name="android:paddingLeft">20dp</item>
    <item name="android:paddingRight">20dp</item>
    <item name="android:textSize">15dp</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="android:background">?android:attr/selectableItemBackground</item>
    <item name="android:textColor">#000</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="elv_parent">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAlignment">center</item>
    <item name="android:layout_margin">0dp</item>
    <item name="android:paddingTop">15dp</item>
    <item name="android:paddingBottom">15dp</item>
    <item name="android:paddingLeft">20dp</item>
    <item name="android:paddingRight">20dp</item>
    <item name="android:textSize">17.5dp</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="android:background">?android:attr/selectableItemBackground</item>
    <item name="android:textColor">#000</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="elv_child">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAlignment">center</item>
    <item name="android:layout_margin">0dp</item>
    <item name="android:paddingTop">15dp</item>
    <item name="android:paddingBottom">15dp</item>
    <item name="android:paddingLeft">20dp</item>
    <item name="android:paddingRight">20dp</item>
    <item name="android:textSize">15dp</item>
    <item name="android:clickable">false</item>
    <item name="android:focusable">false</item>
    <item name="android:background">?android:colorBackground</item>
    <item name="android:textColor">#222</item>
    <item name="android:autoLink">web</item>
  </style>
  <style name="elv_image">
    <item name="android:padding">10dp</item>
  </style>
</resources>