<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            style="@style/title"
            android:text="@string/maths_title" />
        <TextView
            style="@style/subtitle"
            android:text="@string/maths_home_subtitle" />
        <View
            style="@style/LargeDivider" />
        <TextView
            style="@style/maths_def"
            android:text="@string/maths_home_definitions"
            android:id="@+id/showDefinitions" />
        <View
            style="@style/itemSeparator" />
    </LinearLayout>
</ScrollView>